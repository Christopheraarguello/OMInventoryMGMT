<!DOCTYPE html>
<html>
  <head>
    <title>OMInventoryMGMT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <div class="wrapper">
      <div class="sidebar" data-color="purple" data-image="../assets/img/sidebar-1.jpg">
          <div class="logo">
              <a href="/" class="simple-text">
                  Medical Inventory App
              </a>
          </div>
          <div class="sidebar-wrapper">
              <ul class="nav">
                  <li class= "<%= controller_name == 'page' ? 'active' :nil  %>">

                      <a href="/">
                          <i class="material-icons">dashboard</i>
                          <p>Home</p>
                      </a>
                  </li>
                    <li class= "<%= (controller_name == 'surgery_appts' && controller.action_name == 'new' ) ? 'active' :nil  %>">
                      <a href="/surgery_appts/new">
                          <i class="material-icons">bubble_chart</i>
                          <p>New Surgery Appt</p>
                      </a>
                  </li>
                  <li class= "<%= ( controller_name == 'surgery_appts' && controller.action_name == 'index' || (controller_name == 'surgery_appts' && controller.action_name == 'show') || (controller_name == 'surgery_appts' && controller.action_name == 'complete') || (controller_name == 'surgery_appts' && controller.action_name == 'completed')) ? 'active' :nil  %>">
                      <a href="/surgery_appts">
                          <i class="material-icons">person</i>
                          <p>Surgery Appts</p>
                      </a>
                  </li>
                  <li class= "<%= controller_name == 'inventories' ? 'active' :nil  %>">
                      <a href="/inventories">
                          <i class="material-icons">content_paste</i>
                          <p>Inventories</p>
                      </a>
                  </li>
                  <li class= "<%= controller_name == 'surgery_types' ? 'active' :nil  %>">
                      <a href="/surgery_types">
                          <i class="material-icons">library_books</i>
                          <p>Surgery Types/Recipes</p>
                      </a>
                  </li>
                  <li class= "<%= controller_name == 'calendar' ? 'active' :nil  %>">
                      <a href="/calendar/index">
                          <i class="material-icons">location_on</i>
                          <p>Calendar</p>
                      </a>
                  </li>
                  <li class="active-pro">
                      <a href="">
                          <i class="material-icons">unarchive</i>
                          <p>
                            <% if current_user %>
                            Signed in as <%= current_user.name %>
                            <% else %>
                            <%= link_to "Logout", '/logout' %>
                            <% end %>
                          </p>
                      </a>
                  </li>


              </ul>
          </div>
      </div>
      <div class="main-panel">
        <%= yield %>
      </div>
    </div>
  </body>
</html>

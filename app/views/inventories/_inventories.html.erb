<h1>Inventories</h1>

<div class="container">
<table class="table">
  <thead>
    <tr>
        <th>Qty in Stock</th>
      </div>
      <th>Clinic</th>
      <th>Supply list</th>
      <th>Out of Stock</th>
      <th>Projected Demand</th>
      <th>Demand for Next Week</th>
      <th>Demand for Next Month</th>
      <th>Demand for Next Year</th>
      <th>Actual Consumed</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.qty %></td>
        <td><%= inventory.clinic.clinic_name %></td>
        <td><%= inventory.supply_list.item_name %></td>
        <td><%= inventory.out_of_stock %></td>
        <td><%= inventory.demand %></td>
        <td><%= inventory.expiration(1, "week") %></td>
        <td><%= inventory.expiration(3, "week") %></td>
        <td><%= inventory.expiration(1, "year") %></td>
        <td><%= inventory.actual_consumed %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Inventory', new_inventory_path %>
<%= render "out_of_stock" %>


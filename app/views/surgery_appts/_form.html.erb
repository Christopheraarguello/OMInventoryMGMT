<div class="col-xs-12 col-md-8 col-md-offset-2">
  <%= form_with(model: surgery_appt, local: true) do |form| %>
  <% if surgery_appt.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(surgery_appt.errors.count, "error") %> prohibited this surgery_appt from being saved:</h2>
    <ul>
      <% surgery_appt.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :surgery_date %>
    <!-- date_select(method, options = {}, html_options = {}) -->
    <%= form.date_select(:surgery_date, {}, {class: 'form-control'}) %>
  </div>

  <div class="form-group label-floating is-empty">
    <%= form.label :surgery_type_id %>
    <%= form.select :surgery_type_id, options_from_collection_for_select(SurgeryType.all, 'id', 'surgery_name'), {}, {class: "form-control"} %>
    <span class="material-input"></span>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>

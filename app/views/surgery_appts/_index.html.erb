<div class="card-content table-responsive">
<table class="table">
  <thead class="text-warning">
      <th>Surgery date</th>
      <th>Clinic</th>
      <th>Surgery type</th>
  </thead>
  <tbody>
    <% @surgery_appts.each do |surgery_appt| %>
      <tr>
        <td><%= surgery_appt.surgery_date %></td>
        <td><%= surgery_appt.clinic.clinic_name %></td>
        <td><%= surgery_appt.surgery_type.surgery_name %></td>
        <td><%= link_to 'Show', surgery_appt %></td>
        <td><%= link_to 'Edit', edit_surgery_appt_path(surgery_appt) %></td>
        <td><%= link_to 'Delete', surgery_appt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% unless surgery_appt.complete %>
          <td><%= link_to 'Complete', completed_path(surgery_appt.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


